@model List<WebApplication1.Models.Product>
@{
}
@{
    <h3>Products (@Model.Count)</h3>
}

<div class="text-center">

    <table class="table table-striped table-hover">
        <thead >
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Product Number</th>
                <th scope="col">Color</th>
                <th scope="col">Standard Cost</th>
                <th scope="col">List Price</th>
                <th scope="col">Sell Start Date</th>
                <th scope="col">Modified Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var products in Model)
            {
                <tr>
                    <th scope="row">@products.ProductId</th>
                    <td>@products.Name</td>
                    <td>@products.ProductNumber</td>
                    <td>@products.Color</td>
                    <td>@products.StandardCost</td>
                    <td>@products.ListPrice</td>
                    <td>@products.SellStartDate.ToString("dd-MM-yyyy")</td>
                    <td>@products.ModifiedDate</td>
                    <td><a class="btn btn-outline-primary" href="Product/View/@products.ProductId">View</a></td>
                </tr>
            }
        </tbody>
    </table>

</div>
